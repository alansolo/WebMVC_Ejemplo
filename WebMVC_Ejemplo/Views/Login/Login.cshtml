@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Login/Login.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/Login/Login.js"></script>

</head>
<body>
    <div ng-app="MyApp" ng-controller="MyController">

        @*LOGIN*@
        <div class="container">

            <div class="d-flex justify-content-center h-100">
                <div class="card">
                    <div class="card-header">
                        <h3>Login</h3>
                        <div class="d-flex justify-content-end social_icon">
                        </div>
                    </div>
                    <div class="card-body">

                        <form runat="server">
                            <div class="input-group form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fa fa-user"></i></span>
                                </div>
                                <input id="txtUser" type="text" class="form-control" title="Ingresa el usuario" placeholder="username" ng-model="usuario" ng-change="EventoCambioTexto(usuario)" />
                                @*<p>{{usuario}}</p>*@
                                <p>{{textoCambio}}</p>
                            </div>
                            <div class="input-group form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fa fa-key"></i></span>
                                </div>
                                <input id="txtPassword" type="password" class="form-control" placeholder="password" ng-model="password" />
                            </div>
                            <div class="form-group">
                                <button id="btnLogin" class="btn float-right login_btn" ng-click="ValidarLogin(usuario, password)">
                                    Login
                                </button>
                            </div>

                            <br />
                            <br />

                            <div class="form-group">
                                <div id="divMensajeError" class="alert alert-danger" role="alert" ng-show="funcionMostrarMensaje()" >
                                    <span id="MensajeError">{{mensaje}}</span>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>

            <div class="container">
                <div class="row">
                    <div class="col-12">

                        <div class="form-group">
                            <button id="btnEmpleado" class="btn float-right login_btn" ng-click="GetEmpleado()">
                                Empleado
                            </button>
                        </div>

                        <table class="table">
                            <thead class="thead-light">
                                <tr>
                                    <th scope="col">Num Empleado</th>
                                    <th scope="col">Nombre</th>
                                    <th scope="col">Apellido Paterno</th>
                                    <th scope="col">Apellido Materno</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="d in ListaEmpleado">
                                    <th>{{d.numEmpleado}}</th>
                                    <td>{{d.nombre}}</td>
                                    <td>{{d.apellidoP}}</td>
                                    <td>{{d.apellidoM}}</td>
                                </tr>
                            </tbody>
                        </table>

                    </div>
                </div>              
            </div>


        </div>

    </div>
</body>
</html>


